{
  "manifest_version": 2,
  "name": "UnBiased",
  "version": "1.1",
  "description": "Are you really that unbiased?",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "<all_urls>",
    "https://api.openai.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "browser_action": {
    "default_title": "Bias Filter",
    "default_popup": "popup.html"
  }
}
